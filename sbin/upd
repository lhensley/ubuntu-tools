#!/bin/bash

DEBUG_MODE=true; if $DEBUG_MODE ; then echo "DEBUG EXECUTING $0 line ${LINENO}" ; fi

# Include script setup file
	source script-setup
	if [ ! $FUNCTIONS_ARE_DEFINED ]; then echo $0: Functions not defined. Aborting; logger $0: Functions not defined. Aborting; exit 1; fi
	if [ ! $VARIABLES_ARE_DEFINED ]; then echo $0: Variables not defined. Aborting; logger $0: Variables not defined. Aborting; exit 1; fi

# Require root
	f_require_root

# Apply patches
	# echo
	# echo Applying patches.
	# upd_patch

# Update from github.com
# Commented this part out 25 June 2024; want to break git activity.
#	echo
#	echo "Updating local git repository."
#	f_git

# Apply configs
	echo
	echo "Applying configurations and permissions." && echo
	f_apply_configs

# Other updates
	echo
	echo "Updating local apt packages"
	f_upd
	echo

# Include script footer file
	f_debug_variable "script_footer" "${PATHNAME[script_footer]}"
	source "${PATHNAME[script_footer]}"


